<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@null"
    tools:context=".view.ui.SelectBusActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="সঠিক তথ্য দিয়ে বাসের সিট খুজুন"
        android:textStyle="bold"
        android:id="@+id/studentlocationtext"
        android:textColor="#0BD014"
        android:textSize="18dp"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="বাস ছাড়ার স্থান নির্ধারন করুন"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:animationCache="true"
        android:spinnerMode="dropdown"
        android:fadeScrollbars="true"
        android:textAlignment="center"
        android:background="#EAF0F1"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/fromto"
        android:layout_marginTop="5dp"
        android:entries="@array/fromto"
        >

    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="বাসের টাইপ নির্ধারন করুণ"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:background="#EAF0F1"
        android:entries="@array/bustype"
        android:id="@+id/bustype"
        android:layout_marginTop="5dp"
        android:animationCache="true"
        android:spinnerMode="dropdown"
        android:fadeScrollbars="true" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="সময় নির্ধারন করুন"
            />
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="রুট নির্ধারন করুন"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <Spinner
            android:animationCache="true"
            android:spinnerMode="dropdown"
            android:fadeScrollbars="true"
            android:layout_width="0dp"
            android:background="#EAF0F1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:entries="@array/time"
            android:id="@+id/time"
            android:dropDownSelector="#DAD292"
            >
        </Spinner>

        <Spinner
            android:background="#EAF0F1"
            android:animationCache="true"
            android:spinnerMode="dropdown"
            android:fadeScrollbars="true"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/busroute"
            android:id="@+id/route" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="খুজুন"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        app:icon="@drawable/ic_baseline_event_seat_24"
        android:paddingHorizontal="60dp"
        android:textSize="20dp"
        android:onClick="Search"
        android:textColor="#050C33"
        android:layout_marginTop="30dp"
        android:id="@+id/searcbtn"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

</LinearLayout>
